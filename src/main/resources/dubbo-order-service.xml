<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.tuya.txc.dubbo" />
    <import resource="classpath:bytejta-supports-dubbo.xml" />

    <bean id="mysql" class="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource">
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/db1?useSSL=false" />
        <property name="user" value="root" />
        <property name="password" value="123456" />
    </bean>



    <bean id="dataSourceWrap" class="org.bytesoft.bytejta.supports.jdbc.XADataSourceImpl">
        <property name="xaDataSource" ref="mysql" />
    </bean>
    <bean id="txcDataSource" class="org.apache.commons.dbcp2.managed.BasicManagedDataSource" destroy-method="close">
        <property name="transactionManager" ref="transactionManager" />
        <property name="xaDataSourceInstance" ref="dataSourceWrap" />

        <property name="maxTotal" value="50" />
        <property name="initialSize" value="20" />
        <property name="maxWaitMillis" value="60000" />
        <property name="minIdle" value="6" />
        <property name="logAbandoned" value="true" />
        <property name="removeAbandonedOnMaintenance" value="true" />
        <property name="removeAbandonedOnBorrow" value="true" />
        <property name="removeAbandonedTimeout" value="60" />

        <property name="testWhileIdle" value="true" />
        <property name="testOnBorrow" value="false" />
        <property name="testOnReturn" value="false" />
        <property name="validationQuery" value="select 'x' " />
        <property name="validationQueryTimeout" value="1" />
        <property name="timeBetweenEvictionRunsMillis" value="30000" />
        <property name="numTestsPerEvictionRun" value="20" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="txcDataSource" />
    </bean>



    <bean id="monitor" class="com.tuya.txc.dubbo.MonitorDbPool">
        <property name="dataSource" ref="txcDataSource" />
    </bean>

    <!--dubbo配置-->
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!-- 采用multicast注册中心-->
    <!--<dubbo:registry address="multicast://224.5.6.7:1234?unicast=false" />-->
    <dubbo:registry address="127.0.0.1:2181" protocol="zookeeper" timeout="30000"/>
    <!-- 提供方应用信息-->
    <dubbo:application name="order-service"/>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.tuya.txc.dubbo.OrderService" ref="OrderService" group="org.feisoft.jta"
                   filter="transaction" loadbalance="transaction" cluster="failfast" retries="-1" timeout ="3000"/>

    <bean id="OrderService" class="com.tuya.txc.dubbo.OrderServiceImpl" />
</beans>
            
